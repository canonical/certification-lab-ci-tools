add_to_path() {
    if [ "$#" -lt 1 ]; then
        echo "Usage: ${FUNCNAME[0]} <path>"
        echo "Error: You need to provide a path."
        return 1
    fi
    local PATH_TO_ADD=$(readlink -m $1)
    if [[ ":$PATH:" != *":$PATH_TO_ADD:"* ]]; then
        export PATH="$PATH:$PATH_TO_ADD"
        echo "Added $PATH_TO_ADD to PATH"
    fi
}
