#!/usr/bin/env bash
# DEPRECATED: Use 'wait-for-snap-changes' from the toolbox package instead.

echo "WARNING: This script is deprecated. Use 'wait-for-snap-changes' from the toolbox package instead." >&2

# Wait for all snap changes on a remote device to complete
#
# See `check_for_snap_changes` (which is repeatedly called here)
# for details
#
# Return value:
#
# 0 if `check_for_snap_changes` is successful or 1 otherwise

usage() {
    echo "Usage: $(basename $0) [--times TIMES] [--delay DELAY]"
}

# 1h 30m max time (180 * 30 / 60 seconds)
TIMES=180
DELAY=30
while [[ "$#" -gt 0 ]]; do
    case $1 in
        --times)
            TIMES=$2
            shift
            ;;
        --delay)
            DELAY=$2
            shift
            ;;
        *)
            usage
            echo "Error: Invalid argument $1"
            exit 1
            ;;
    esac
    shift
done

retry --times $TIMES --delay $DELAY -- \
check_for_snap_changes

RESULT=$?
if [ $RESULT -gt 0 ]; then
    echo "Error: unable to complete $(basename $0)"
fi
exit $RESULT
